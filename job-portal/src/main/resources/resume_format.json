{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ResumeSchema",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Full name of the candidate"
    },
    "email": {
      "type": "string",
      "format": "email",
      "pattern": "^[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\\.[A-Za-z]{2,}$",
      "description": "Email address"
    },
    "mobile_raw": {
      "type": "string",
      "pattern": "^\\+?[0-9\\-\\s\\(\\)]+$",
      "description": "International format mobile number"
    },
    "mobile_intl_std": {
      "type": "string",
      "pattern": "^\\+[1-9]\\d{9,14}$",
      "description": "International format mobile number (E.164 standard)"
    },
    "address": {
      "type": "string",
      "description": "Full postal address"
    },
    "dateOfBirth": {
      "type": "string",
      "description": "Date of birth of the candidate Format: DD-MM-YYYY",
      "pattern": "^[0-9]{2}/[0-9]{2}/[0-9]{4}$"
    },
    "gender": {
      "type": "string",
      "description": "Gender of the candidate"
    },
    "educations": {
      "type": "array",
      "description": "List of educational qualifications",
      "items": {
        "type": "object",
        "properties": {
          "grade": { "type": "string" },
          "degree": { "type": "string" },
          "endYear": { "type": "string", "pattern": "^[0-9]{4}$" },
          "educationOrg": { "type": "string" }
        }
      }
    },
    "experiences": {
      "type": "array",
      "description": "List of work experiences",
      "items": {
        "type": "object",
        "properties": {
          "jobTitle": { "type": "string" },
          "employerName": { "type": "string" },
          "startDate": {
            "type": "string",
            "pattern": "^[0-9]{2}-[0-9]{2}-[0-9]{4}$",
            "description": "Format: DD-MM-YYYY"
          },
          "endDate": {
            "type": "string",
            "pattern": "^[0-9]{2}-[0-9]{2}-[0-9]{4}$",
            "description": "Format: DD-MM-YYYY"
          }
        }
      }
    }
  }
}
